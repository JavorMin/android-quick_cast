<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="@dimen/card_corner_8"
        app:cardElevation="@dimen/card_corner_8">

        <RelativeLayout
            android:id="@+id/grp_card"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/rec_normal_f"
            android:padding="@dimen/margin_big_16">

            <TextView
                android:id="@+id/txt_short_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/master"
                android:layout_centerInParent="true"
                android:alpha=".2"
                android:text="Fog"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/master"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="6"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_huge_50"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_temp"
                android:layout_toRightOf="@id/txt_temp"
                android:fontFamily="@font/master"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="ยบ"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_temp"
                android:layout_marginLeft="20sp"
                android:fontFamily="@font/gravedigger"
                android:text=""
                android:alpha=".7"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_large_20"
                />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20sp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_weather_cloud_rain"
                android:tint="@color/colorAccent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>